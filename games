<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Game Website</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        #gameContainer {
            width: 400px;
            height: 400px;
            background-color: #000;
            margin: 50px auto;
            position: relative;
        }

        .character {
            width: 40px;
            height: 40px;
            background-color: #ff0000;
            position: absolute;
            top: 180px;
            left: 180px;
        }

        #instructions {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <h1>Move the Character Game</h1>
    <div id="gameContainer">
        <div class="character" id="player"></div>
    </div>
    <div id="instructions">
        <p>Use the arrow keys to move the red square!</p>
    </div>

    <script>
        const player = document.getElementById('player');
        const gameContainer = document.getElementById('gameContainer');

        // Character's initial position
        let xPos = 180;
        let yPos = 180;

        // Movement step size
        const step = 20;

        // Key press event listener
        document.addEventListener('keydown', (e) => {
            switch (e.key) {
                case 'ArrowUp':
                    if (yPos - step >= 0) yPos -= step;
                    break;
                case 'ArrowDown':
                    if (yPos + step <= gameContainer.clientHeight - player.clientHeight) yPos += step;
                    break;
                case 'ArrowLeft':
                    if (xPos - step >= 0) xPos -= step;
                    break;
                case 'ArrowRight':
                    if (xPos + step <= gameContainer.clientWidth - player.clientWidth) xPos += step;
                    break;
            }
            // Apply the new position
            player.style.top = yPos + 'px';
            player.style.left = xPos + 'px';
        });
    </script>
</body>
</html>
